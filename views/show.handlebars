<section class="show">
  <a href="show-idea.handlebars">Submit New Show!</a>
  <img src="../public/images/ShowPH.png" alt="{{Show.description}}">
  <div class="website-details">
    <h3>{{Show.show_name}}</h3>
    <p>By: {{Show.user_name}}</p>
    <p>Description: {{Show.show_idea}}</p>
    <p>Idea submitted: {{ format_date Show.submit_date}}</p>
  </div>
</section>

